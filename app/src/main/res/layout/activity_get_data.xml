<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="10dp"
        android:background="@color/main_color"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            android:contentDescription="@string/back_button" />


        <TextView
            android:id="@+id/textView7"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:layout_weight="1"
            android:background="@color/main_color"

            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textSize="34sp"
            android:textStyle="bold" />


        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin20"

        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:gravity="center"
            android:text="@string/enter_the_weight_of_the_plastics"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_gray" />

        <LinearLayout
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin20"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin20"
                android:gravity="center"
                android:text="@string/enter_the_weight_of_the_second_pile_with_type_3_4_6_and_7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/user_img"
                    app:srcCompat="@drawable/baseline_scale_24" />

                <EditText
                    android:id="@+id/weightT2add"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_box"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="0.565"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_box"
                    android:layout_marginEnd="@dimen/margin10"
                    android:background="@null"
                    android:padding="@dimen/margin10"

                    android:text="KG"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/enter_the_weight_of_the_type_1_plastics"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/user_img"
                    app:srcCompat="@drawable/baseline_scale_24" />

                <EditText
                    android:id="@+id/weightT1add"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_box"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="@string/_0_565"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_box"
                    android:layout_marginEnd="@dimen/margin10"
                    android:background="@null"
                    android:padding="@dimen/margin10"

                    android:text="@string/kg"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin20"
                android:gravity="center"
                android:text="Enter the number of residents that contributed to the acumilation of the plastics"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/user_img"
                    app:srcCompat="@drawable/baseline_person_24" />

                <EditText
                    android:id="@+id/peopleadd"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_box"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="5"
                    android:inputType="number"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_box"
                    android:layout_marginEnd="@dimen/margin10"
                    android:background="@null"
                    android:padding="@dimen/margin10"

                    android:text="People"
                    android:textSize="20sp" />

            </LinearLayout>

            <Button
                android:id="@+id/addweightbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin50"
                android:text="@string/submit" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>