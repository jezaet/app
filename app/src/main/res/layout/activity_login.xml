<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/login_pic"
        app:srcCompat="@drawable/login_pic" />

    <TextView
        android:id="@+id/loginError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:text="@string/an_error_occurred_please_check_your_details"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin40"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginEnd="@dimen/margin40"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/user_img"
            app:srcCompat="@drawable/baseline_person_24" />

        <EditText
            android:id="@+id/loginUsername"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_box"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_weight="1"
            android:autofillHints="username"
            android:background="@null"
            android:ems="10"
            android:hint="@string/username"
            android:importantForAutofill="auto"
            android:inputType="text"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin40"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginEnd="@dimen/margin40"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/lock_image"
            app:srcCompat="@drawable/ic_baseline_lock_24" />

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_box"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_weight="1"
            android:autofillHints="password"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin40"
        android:layout_marginTop="@dimen/margin40"
        android:layout_marginEnd="@dimen/margin40"
        android:layout_marginBottom="@dimen/margin10"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_weight="1"
            android:padding="@dimen/margin13"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin10"
            android:layout_weight="1"
            android:backgroundTint="@color/secondary_color_dark"
            android:padding="@dimen/margin13"
            android:text="@string/register"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin40"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginEnd="@dimen/margin40"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/or"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin40"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginEnd="@dimen/margin40"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/loginWithGoogle"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:contentDescription="@string/login_with_google"
            app:srcCompat="@drawable/google_signin" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="115dp" />


</LinearLayout>